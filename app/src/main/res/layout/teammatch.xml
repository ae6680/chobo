<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/abc_background_cache_hint_selector_material_light">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_text_disabled_material_light"
        android:backgroundTint="@color/abc_secondary_text_material_light">

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton"
            android:src="@mipmap/ic_emblem1"
            android:clickable="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="30dp" />

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="102dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="right|center_vertical"
            android:clickable="true"
            android:src="@mipmap/ic_emblem2"
            android:adjustViewBounds="true"
            android:duplicateParentState="false"
            android:hapticFeedbackEnabled="false"
            android:keepScreenOn="false"
            android:fadeScrollbars="false"
            android:isScrollContainer="false"
            android:longClickable="false"
            android:nestedScrollingEnabled="false"
            android:soundEffectsEnabled="false"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="청춘FC"
            android:id="@+id/textView4"
            android:layout_gravity="left|top"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="몰라FC"
            android:id="@+id/textView5"
            android:layout_gravity="right|top"
            android:layout_marginTop="70dp"
            android:layout_marginRight="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="팀 매치"
            android:id="@+id/textView2"
            android:layout_gravity="left|top"
            android:layout_marginTop="10dp" />

    </FrameLayout>

</LinearLayout>